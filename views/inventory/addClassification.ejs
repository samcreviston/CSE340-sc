<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
  <div id="wrapper">
    <%- include('../partials/header') %>
    <%- include('../partials/navigation') %>

    <main>
      <h1>Add New Classification</h1>

      <form id="addClassificationForm" action="/inv/add-classification" method="POST" novalidate>
        <label for="classification_name">Classification Name</label>
        <input 
          type="text" 
          id="classification_name" 
          name="classification_name" 
          pattern="^[A-Za-z0-9]+$"
          title="Letters and numbers only, no spaces or special characters."
          required
        />
        <small>No spaces or special characters allowed. Letters and numbers only.</small>
        <br>
        <button type="submit">Add Classification</button>
      </form>
    </main>

    <%- include('../partials/footer') %>
  </div>

  <script>
    // client-side validation (already handled via pattern + required)
    document.getElementById("addClassificationForm").addEventListener("submit", function(e) {
      const input = document.getElementById("classification_name")
      const regex = /^[A-Za-z0-9]+$/
      if (!regex.test(input.value)) {
        alert("Invalid input: letters and numbers only. No spaces or special characters.")
        e.preventDefault()
      }
    })
  </script>
</body>
</html>